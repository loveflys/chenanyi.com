@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <title>哇哈哈包子！</title>
</head>
<body>
    <div>
        <form enctype="multipart/form-data" target="screct_frame" method="POST" action="/Photo/UploadImage">
            <div class="form-group">
                <label for="exampleInputEmail1">标题</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="标题">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">分类</label>
                <input type="text" class="form-control" name="type" id="type" placeholder="分类">
            </div>
            <input type="file" id="file1" name="file1" style="height: 200px; width: 680px; opacity: 0; display: block; z-index: 9">
            <img id="img" src="~/Content/img/img.png" style="height: 200px; margin-top: -200px; margin-left: 200px;" />
            <button type="submit" id="confirm" class="btn btn-default">提交</button>
        </form>
        <iframe name="screct_frame" style="display: none;"></iframe>
    </div>
    <script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script>
        $(function () {
            var width = $(window).width();
            $("#img").attr("style", "margin-left:" + (($(window).width() / 2) - 150) + "px;height: 200px; margin-top: -200px;");
            $("#file1").attr("style", "width:" + width + "px;height: 200px;opacity: 0; display: block; z-index: 9");
            $("#confirm").attr("style", "width:" + width + "px");
        })
    </script>
</body>
</html>
